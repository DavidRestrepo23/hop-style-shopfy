<footer>
   <div class="container">
       <div class="row justify-content-between align-items-center">
        <div class="col-md-3 image-brand text-center text-md-start mb-4 mb-md-0">
            <img src="{{ 'hop-studio.png' | asset_url }}" width="144px" alt="" />
            {% include 'icon-points.liquid' %}
        </div>

        <div class="col-md-5 d-flex justify-content-md-between align-items-center footer-icons pt-3 pt-md-0">
            <img src="{{ 'footer-1.png' | asset_url }}" width="84px" height="auto" alt="">
            <img src="{{ 'footer-2.png' | asset_url }}" width="100px" height="auto" alt="">
            <img src="{{ 'footer-3.png' | asset_url }}" width="176px" height="auto" alt="">
        </div>
       </div>
       <hr class="divider">
       <div class="row justify-content-between align-items-center mt-5">
            <div class="col-12 col-md-9 d-md-flex">
                <ul class="menu-links">
                    <a href="/"><li>Home {% include 'icon-arrow-top.liquid' %}</li></a>
                    <a href="{{section.settings.sale_link}}"><li>% Sale {% include 'icon-arrow-top.liquid' %}</li></a>
                    {% if section.settings.lookbook_link %}
                        <a href="{{section.settings.lookbook_link}}"><li>Lookbook {% include 'icon-arrow-top.liquid' %}</li></a>
                    {% endif %}
                    {% if section.settings.order_call_link %}
                        <a href="{{section.settings.order_call_link}}"><li>Order a Call {% include 'icon-arrow-top.liquid' %}</li></a>
                    {% endif %}
                </ul>
                <ul class="collections-links d-none d-md-block">
                    <a href="#"><h4>Catalogue {% include 'icon-arrow-top.liquid' %}</h4></a>
                    {% for collection in collections limit: 5 %}
                        <li><a href="{{collection.url}}">{{collection.title | downcase}}</a></li>
                    {% endfor %}
                    <li><a href="/collections">Others...</a></li>
                </ul>
                <ul class="collections-links social">
                    <h4><a href="#">Síguenos</a></h4>
                    <div class="d-flex flex-column justify-content-center mt-4">
                        <li><a href="{{section.settings.instagram_link}}">{% include 'icon-instagram.liquid' %} Instagram</a></li>
                        <li class="mt-3"><a href="{{section.settings.facebook_link}}">{% include 'icon-facebook.liquid' %} Facebook</a></li>
                        <li class="mt-3"><a href="{{section.settings.wp_link}}">{% include 'icon-whatsapp.liquid' %} Whatsapp</a></li>
                    </div>
                </ul>
            </div>
            <div class="col-12 col-md-3 justify-content-end">
                <ul class="others-links">
                    <li data-bs-toggle="modal" data-bs-target="#userModal"><span>{% include 'icon-user.liquid' %} Sign In</span></li>
                    <li class="cart-footer"><span>{% include 'icon-cart.liquid' %} Bag (0)</span></li>
                    <li><a href="#">{% include 'icon-favorites.liquid' %} Favorites</a></li>
                    <li><a href="#">{% include 'icon-language.liquid' %} Language</a></li>
                </ul>
            </div>
       </div>
       <div class="row justify-content-between mt-5 pt-5 copyright">
        <div class="col-12 col-md-6 text-center text-md-start">
            <small class="d-none d-md-block">© 2022 Hop Style <a href="#">Terms & Conditions</a> and <a href="#">Privacy Policy</a></small>
            <small class="d-md-none"><a href="#">Terms & Conditions</a> and <a href="#">Privacy Policy</a><br>© 2022 Hop Style s</small>
 
        </div>
        <div class="col-12 col-md-6 text-center text-md-end mt-5 mt-md-0 ">
            <img src="{{ 'payments.png' | asset_url }}" width="250" height="auto" alt="">
        </div>
       </div>
   </div>
</footer>


{% schema %}
{
    "name": "Footer",
    "settings": [
       {
        "type": "url",
        "id": "sale_link",
        "label": "Sale Link"
       },
       {
        "type": "url",
        "id": "lookbook_link",
        "label": "LookBook Link"
       },
       {
        "type": "url",
        "id": "order_call_link",
        "label": "Order Call Link"
       },
       {
        "type": "url",
        "id": "facebook_link",
        "label": "Facebook Link"
       },
       {
        "type": "url",
        "id": "instagram_link",
        "label": "Instagram Link"
       },
       {
        "type": "url",
        "id": "wp_link",
        "label": "Whatsapp Link"
       }
    ],
    "presets": [
        {
            "category": "Footer",
            "name":"Footer"
        }
    ]
}
{% endschema %}