<section class="collections-home-section">
	<div class="container">
		<div class="row">
			{% for collection in collections %}
			<div
				class="col-12 col-md-6 col-lg-3 collections-item px-5 px-md-2 px-lg-2"
			>
				<a href="/collections/{{ collection.handle }}">
					<div class="image-box">
						<img
							src="{{ collection.image.src | img_url: 'large' }}"
							width="100%"
							height="400px"
							alt="{{ collection.title }}"
						/>
					</div>
					<div class="item-info">
						<span>
							{% include 'icon-arrow-top.liquid' %} {{ collection.title }}
						</span>
					</div>
				</a>
			</div>
			{% endfor %}
		</div>
	</div>
</section>