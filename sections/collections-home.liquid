<section class="collections-home-section">
	<div class="container">
		<div class="row">
			{% for collection in collections limit: 8 %}
			<div class="col-md-6 col-lg-3 collections-item">
				<a href="/collections/{{collection.handle}}">
                    <img
                        src="{{collection.image.src  | img_url: 'large'}}"
                        width="100%"
                        height="400px"
                        alt="{{collection.title}}"
                    />
					<div class="item-info">
						<span>
							{% include 'icon-arrow-top.liquid' %} {{ collection.title }}
						</span>
					</div>
				</a>
			</div>
			{% endfor %}
		</div>
	</div>
</section>

{% schema %}
{
    "name": "Collections Home",
    "settings": [],
    "presets": [
        {
            "category": "Block",
            "name":"Collections Home"
        }
    ]
}
{% endschema %}