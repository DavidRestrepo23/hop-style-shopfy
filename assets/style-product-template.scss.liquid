@import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap");
$color-white: #ffffff;
$color-black: #000000;
$color-gray-primary: #7b7f89;
$color-text : #7B7F89;

body,
html {
	background-color: $color-black;
	overflow-y: hidden;
	height: 100%;
}

.page-container,
.main-content,
#shopify-section-product-template,
.product-template-section {
	height: 100% !important;
}

.product-template-section {
	.row {
		height: 100%;
		max-height: calc(100% - 100px);
	}

	.block-product-info {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		padding-top: 60px;
		padding-left: 0;
		padding-right: 0;

		@media (min-width: 1000px) and (max-width: 1250px) {
			padding-top: 0;
		}

		.content-info {
			padding: 0 60px 30px;
		}

		.title {
			h1 {
				color: $color-text;
			}
			h1,
			h2 {
				font-weight: 500;
				font-size: 48px;
				text-transform: uppercase;
				margin: 0;
				line-height: 58px;
			}

			h2 {
				color: $color-white;
			}
		}

		span {
			font-size: 32px;
			color: $color-white;

			&.compare-price {
				color: $color-gray-primary;
			}
		}

		.featured-image {
			img {
				object-fit: cover;
			}
		}

		.accordion {
			width: 350px;
			.accordion-item {
				border: 0;
				border-bottom: 1px solid $color-gray-primary;
				background-color: $color-black;
				.accordion-header {
					.accordion-button {
						background-color: $color-black;
						border-radius: 0;
						color: $color-white;
						font-size: 16px;
						line-height: 20px;
						max-height: 30px;
						padding: 25px 0;
						position: relative;

						&:focus {
							box-shadow: none;
						}

						&::after {
							display: none;
						}

						svg {
							position: absolute;
							right: 0;
						}
					}
				}

				.accordion-collapse {
					.accordion-body {
						p {
							color: $color-gray-primary;
							margin: 0;
						}
					}
				}
			}
		}
	}

	.content-button {
		button {
			height: 100px;
			width: 100%;
			background-color: $color-white;
			color: $color-black;
			border: 0;
			border-radius: 0;
			text-transform: uppercase;
			font-size: 16px;

			&.submit {
				background-color: #1e1e1e;
				color: $color-white;
			}
		}
	}

	.block-product-image {
		padding: 0 0;
		position: relative;

		.item-slide {
			width: 250px;
			height: 778px !important;

			a {
				height: 778px !important;
				display: flex !important;

				img {
					object-fit: cover;
				}
			}

			@media(min-width:1000px) and (max-width:1350px) {
				height: auto;
			}
		}
	}

	.content-image {
		position: relative;
	}

	.slider-nav {
		
		margin: 0 auto;
		position: absolute;
		left: 0;
		right: 0;
		bottom: 40px;

		.slick-slide {
			width: 60px !important;
		}

		.slick-track {
			margin: 0;
			display: flex;
			justify-content: center;
		}
	}


	.reel-content {
		height: 100px;

		img {
			height: 100%;
			object-fit: cover;
			object-position: top;
		}
	}

	.content-sizes {
		background-color: #F2F2F2;
	}

	
}
