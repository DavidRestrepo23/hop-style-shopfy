@import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap");
$color-white: #ffffff;
$color-black: #000000;
$color-gray-primary: #7b7f89;
$color-text: #7b7f89;

body,
html {
	background-color: $color-black;
	overflow-y: hidden;
	height: 100%;

	@media(max-width: 767px) {
		overflow-y: initial;
	}
}

.page-container,
.main-content,
#shopify-section-product-template,
.product-template-section {
	height: 100% !important;
}

.product-template-section {
	.row {
		height: 100%;
		max-height: calc(100% - 100px);
	}

	.block-product-info {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		padding-top: 60px;
		padding-left: 0;
		padding-right: 0;

		@media (min-width: 1000px) and (max-width: 1250px) {
			padding-top: 0;
		}

		.content-info {
			padding: 0 60px 30px;
		}

		.title {
			h1 {
				color: $color-text;
			}
			h1,
			h2 {
				font-weight: 500;
				font-size: 48px;
				text-transform: uppercase;
				margin: 0;
				line-height: 58px;
			}

			h2 {
				color: $color-white;
			}
		}

		span {
			font-size: 32px;
			color: $color-white;

			&.compare-price {
				color: $color-gray-primary;
			}
		}

		.featured-image {
			img {
				object-fit: cover;
			}
		}

		.accordion {
			width: 350px;
			.accordion-item {
				border: 0;
				border-bottom: 1px solid $color-gray-primary;
				background-color: $color-black;
				.accordion-header {
					.accordion-button {
						background-color: $color-black;
						border-radius: 0;
						color: $color-white;
						font-size: 16px;
						line-height: 20px;
						max-height: 30px;
						padding: 25px 0;
						position: relative;

						&:focus {
							box-shadow: none;
						}

						&::after {
							display: none;
						}

						svg {
							position: absolute;
							right: 0;
						}
					}
				}

				.accordion-collapse {
					.accordion-body {
						padding: 0 0 15px;
						p {
							color: $color-gray-primary;
							margin: 0;
							font-size: 14px;
							span {
								font-size: 14px;
							}
						}
					}
				}
			}
		}
	}

	.content-button {
		button {
			height: 100px;
			width: 100%;
			background-color: $color-white;
			color: $color-black;
			border: 0;
			border-radius: 0;
			text-transform: uppercase;
			font-size: 16px;

			&.submit {
				background-color: #1e1e1e;
				color: $color-white;
			}
		}
	}

	.block-product-image {
		padding: 0 0;
		position: relative;

		.slider-for, .slick-list, .slick-track {
			height: 100% !important;
			
		}

		.item-slide {
			width: 250px;
			height: 100% !important;

			a {
				height: 100% !important;
				display: flex !important;

				img {
					object-fit: cover;
					object-position: top;
				}
			}

			@media (min-width: 1000px) and (max-width: 1350px) {
				height: auto;
			}
		}
	}

	.content-image {
		position: relative;
		height: 100%;
		max-height: calc(100vh - 200px);
	}

	.slider-nav {
		margin: 0 auto;
		position: absolute;
		left: 0;
		right: 0;
		bottom: 40px;

		.slick-list {
			display: flex;
			justify-content: center;
		}

		.slick-slide {
			width: 62px !important;
			cursor: pointer;

			&.slick-current {
				position: relative;
				border: 2px solid $color-black;

				&::after {
					background-image: url("{{'plus-image.png' | asset_url }}");
					background-repeat: no-repeat;
					background-size: contain;
					bottom: 0;
					content: "";
					height: 14px;
					left: 0;
					margin: auto;
					position: absolute;
					right: 0;
					top: 0;
					width: 14px;
				}

				&::before {
					content: "";
					position: absolute;
					width: 60px;
					height: 60px;
					background-color: $color-black;
					opacity: 0.5;
					border: 2px solid $color-black;
				}
			}
		}

		.slick-track {
			margin: 0;
			display: flex;
			justify-content: center;
			transform: none !important;
		}
	}

	.reel-content {
		height: 100px;

		img {
			height: 100%;
			object-fit: cover;
			object-position: top;
		}
	}

	.content-sizes {
		background-color: #f2f2f2;

		.filter-radio {
			position: relative;
			width: 60px;
			height: 60px;

			input {
				appearance: none;
				-webkit-appearance: none;
				border: 0;
				width: auto;
				height: auto;
				position: absolute;
				z-index: 10;
				left: 0;
				right: 0;
				top: 0;
				bottom: 0;
			}

			label {
				border: 1px solid;
				width: 60px;
				height: 60px;
				text-align: center;
				font-weight: normal;
				cursor: pointer;
				background-color: $color-black;
				color: $color-white;
				font-size: 16px;
				position: relative;

				span {
					position: absolute;
					left: 0;
					right: 0;
					top: 16px;
					bottom: 0;
					margin: auto;
				}
			}

			input {
				&:checked + label {
					background-color: $color-white;
					border: 2px solid;
					color: $color-black;
				}
			}
		}
	}
	@media(min-width: 1000px) and (max-width:1299px) {
		.block-product-info {
			.content-info {
				padding: 0 20px 0 17px;
			}

			.title {
				h1 {
					font-size: 35px;
					line-height: 40px;
				}
			}

			span {
				font-size: 22px;
			}

			.accordion {
				width: 145%;
			}
		}
	}
	@media(min-width: 1300px) and (max-width:1399px) {
		
		.block-product-info {
			padding-top: 30px;

			.content-info {
				padding: 0 20px 30px 30px;
			}

			.title {
				h1 {
					font-size: 35px;
					line-height: 40px;
					padding: 0 100px 0 0;
				}
			}
			span {
				font-size: 22px;
			}
		}
	}

	@media(min-width: 768px) and (max-width:999px) {
		.block-product-info {
			padding: 0;

			.content-info {
				padding: 79px 20px 50px;
			}

			.title {
				h1 {
					font-size: 30px;
					line-height: 38px;
				}
			}

			span {
				font-size: 26px;
			}

			.accordion {
				width: 100%;
			}

			.featured-image {
				display: none;
			}
		}
	}

	@media(max-width: 767px) {
		.block-product-info {
			padding-top: 20px;

			.content-info {
				padding: 0 20px 50px;
			}

			.title {
				h1 {
					font-size: 30px;
					line-height: 38px;
					padding: 0 111px 0 0;
				}
			}

			span {
				font-size: 26px;
			}
		}
	}
}
