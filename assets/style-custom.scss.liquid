	background-color: $color-background;
	padding: 120px 0 60px;

	.collections-item {
		position: relative;
		margin-bottom: 20px;

		.image-box {
			position: relative;
			margin: auto;
			overflow: hidden;

			img {
				object-fit: cover;
				max-width: 100%;
				transition: all 0.3s;
				display: block;
				width: 100%;
				transform: scale(1);
			}
		}

		.item-info {
			position: absolute;
			bottom: 0;
			left: 0;
			width: 100%;
			height: 120px;
			background: linear-gradient(
				180deg,
				rgba(17, 17, 18, 0) 0%,
				#111112 113.59%
			);
			transition: all 400ms ease;

			span {
				bottom: 35px;
				color: $color-white;
				font-size: 22px;
				font-weight: 400;
				left: 42px;
				overflow: hidden;
				position: absolute;
				text-overflow: ellipsis;
				text-transform: uppercase;
				white-space: nowrap;
				width: 250px;
			}
		}

		&:hover {
			transition: all 400ms ease;

			.image-box img {
				transform: scale(1.1);
			}

			.item-info {
				height: 180px;
			}
		}
	}

	@media (min-width: 900px) and (max-width: 1199px) {
		.collections-item {
			.item-info {
				span {
					font-size: 16px;
				}
			}
		}
	}

	@media (max-width: 767px) {
		padding: 60px 0;

		.collections-item {
			.item-info {
				span {
					font-size: 18px;
					left: 61px;
				}
			}
		}
	}
}

