@import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap");

$color-background: #111111;
$color-white: #ffffff;
$color-black: #000000;
$color-gray-primary: #7b7f89;
* {
	font-family: "Space Grotesk", sans-serif;
}

body,
html {
	overflow-x: hidden;
}

section.with-margin {
	margin-bottom: 200px;

	@media (max-width: 767px) {
		margin-bottom: 130px;
	}
}

.btn.btn-primary {
	border-radius: 40px;
	border: 0;
	font-size: 16px;
	padding: 12px;
	width: 156px;
	background: rgba(255, 255, 255, 0.1);
	backdrop-filter: blur(30px);
	border: 1px solid #5e5e5e;
	transition: all 400ms ease;

	&.with-arrow {
		position: relative;
		padding: 12px 15px 12px 0;

		&::after {
			content: "";
			position: absolute;
			background-image: url("{{ 'arrow-top.png' | asset_url }}");
			background-repeat: no-repeat;
			width: 20px;
			height: 20px;
			right: 20px;
			top: 17px;
			background-size: 70%;
		}
	}

	&:hover {
		background: rgba(255, 255, 255, 0.2);
		transition: all 400ms ease;
	}

	@media (min-width: 900px) and (max-width: 1199px) {
		font-size: 14px;
		width: 110px;
		z-index: 1000;
		padding: 7px;
	}

	@media (min-width: 768px) and (max-width: 899px) {
		font-size: 12px;
		z-index: 1000;
	}
}

/*HEADER**/
header {
	background-color: $color-background;
	.logo {
		img {
			width: 153px;
			height: auto;
		}
		svg {
			margin-left: 30px;
		}
	}
	span {
		a {
			text-decoration: none;
			color: $color-white;

			&:hover {
				color: $color-gray-primary;
			}
		}
	}

	.mobile-nav {
		border-bottom: 1px solid $color-gray-primary;
		height: 70px;
		position: fixed;
		top: 0;
		width: 100%;
		background-color: $color-background;
		z-index: 1000;

		.sidebar {
			position: fixed;
			top: 70px;
			left: -800px;
			right: 0;
			bottom: 0;
			width: 100%;
			background-color: $color-background;
			z-index: 100;
			height: 100%;
			display: flex;
			flex-direction: column;
			align-items: center;
			transition: all 0.6s ease-in-out 0s;

			&.open-menu {
				transition: all 0.6s ease-in-out 0s;
				left: 0;
			}

			ul.menu-links {
				padding: 0;

				a {
					text-decoration: none;
				}
				li {
					width: 208px;
					position: relative;
					margin-bottom: 30px;
					transition: all 400ms ease;
					font-size: 20px;
					color: $color-white;
					font-weight: 400;
					text-decoration: none;
					list-style: none;

					&::after {
						content: "";
						border-bottom: 1px solid $color-gray-primary;
						width: 100%;
						height: 1px;
						position: absolute;
						left: 0;
						bottom: -17px;
					}

					svg {
						position: absolute;
						right: 0;
						bottom: 0;
						top: 0;
						margin: auto;
						transition: all 400ms ease;
					}

					&:hover {
						transition: all 400ms ease;
						color: $color-gray-primary;
						svg {
							transition: all 400ms ease;
							path {
								transition: all 400ms ease;
								fill: $color-gray-primary;
							}
						}
					}
				}
			}

			ul.other-links {
				padding: 0;

				a {
					text-decoration: none;
				}

				li {
					list-style: none;
					font-size: 18px;
					margin-bottom: 30px;
					color: $color-white;

					&:hover {
						transition: all 400ms ease;
						color: $color-gray-primary;

						svg {
							transition: all 400ms ease;
							path {
								transition: all 400ms ease;
								fill: $color-gray-primary;
							}
						}
					}
				}
			}

			.search {
				width: 100%;
				padding: 30px;
				position: absolute;
				bottom: 72px;
				border-top: 1px solid $color-gray-primary;
			}
		}

		.hamburger {
			padding: 0 30px;
			border-right: 1px solid $color-gray-primary;
			display: flex;
			height: 100%;
			justify-content: center;
			align-items: center;
			cursor: pointer;
			position: relative;

			svg {
				position: absolute;
			}
		}
		.cart {
			position: relative;
			right: -50px;
			cursor: pointer;

			span {
				position: absolute;
				width: 18px;
				height: 18px;
				border-radius: 50%;
				background-color: $color-white;
				text-align: center;
				font-size: 13px;
				right: 18px;
				color: $color-black;
			}
		}
	}

	.nav {
		border-bottom: 1px solid $color-gray-primary;
		height: 100px;
		position: fixed;
		background-color: $color-background;
		z-index: 100;

		.nav__item {
			align-items: center;
			border-right: 1px solid $color-gray-primary;
			display: flex;
			height: 100%;
			justify-content: center;
			text-transform: capitalize;

			&:last-child {
				border-right: 0;
				position: relative;
				left: 13px;
			}
		}
		.__links {
			ul {
				align-items: center;
				display: flex;
				margin: 0;
				li {
					list-style: none;
					margin: 0 15px;
					a {
						color: $color-white;
						text-decoration: none;
						transition: all 400ms ease;

						&:hover {
							color: $color-gray-primary;
							transition: all 400ms ease;
						}
					}

					&.site-nav--active {
						a {
							color: $color-gray-primary;
						}
					}
				}
			}

			&.icons {
				li {
					border-radius: 50%;
					cursor: pointer;
					height: 40px;
					margin: 0 5px;
					padding: 6px;
					text-align: center;
					transition: all 400ms ease;
					width: 40px;

					&:hover {
						transition: all 400ms ease;
						background: rgba(255, 255, 255, 0.1);
						text-align: center;
						padding: 6px;
					}
				}
			}
		}
	}

	@media (min-width: 900px) and (max-width: 1199px) {
		.logo {
			img {
				width: 120px;
			}
		}
		.nav {
			.nav__item {
				.__links {
					ul {
						padding: 0;
						li {
							margin: 0 5px;
						}
					}
				}
			}
		}
	}

	@media (min-width: 800px) and (max-width: 899px) {
		.logo {
			img {
				width: 120px;
			}
		}
		.nav {
			.nav__item {
				.__links {
					ul {
						padding: 0;
						li {
							margin: 0 3px;
						}
					}
				}
			}
		}
	}
}

#Huratips-Pagination {
	a {
		color: #111111 !important;
	}
}

.page-search {
	background-color: #111111;
	h1 {
		color: $color-white;
	}

	.pagination {
		border-top: 1px solid;
		align-items: center;
		display: flex;
		justify-content: center;
