@import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap");

$color-white: #ffffff;
$color-black: #000000;
$color-gray-primary: #7b7f89;
* {
	font-family: "Space Grotesk", sans-serif;
}

body,
html {
	overflow-x: hidden;
}

section.with-margin {
	margin-bottom: 200px;

	@media (max-width: 767px) {
		margin-bottom: 130px;
	}
}

.btn.btn-primary {
	border-radius: 40px;
	border: 0;
	font-size: 16px;
	padding: 12px;
	width: 156px;
	background: rgba(255, 255, 255, 0.1);
	backdrop-filter: blur(30px);

	@media (min-width: 900px) and (max-width: 1199px) {
		font-size: 14px;
		width: 110px;
		z-index: 1000;
		padding: 7px;
	}

	@media (min-width: 768px) and (max-width: 899px) {
		font-size: 12px;
		z-index: 1000;
	}
}

/*HEADER**/
header {
	background-color: $color-black;
	.logo {
		img {
			width: 153px;
			height: auto;
		}
		svg {
			margin-left: 30px;
		}
	}
	span {
		a {
			text-decoration: none;
			color: $color-white;

			&:hover {
				color: $color-gray-primary;
			}
		}
	}

	.mobile-nav {
		border-bottom: 1px solid $color-gray-primary;
		height: 70px;
		position: fixed;
		top: 0;
		width: 100%;
		background-color: $color-black;
		z-index: 1000;
		.hamburger {
			padding: 0 30px;
			border-right: 1px solid $color-gray-primary;
			display: flex;
			height: 100%;
			justify-content: center;
			align-items: center;
		}
		.cart {
			position: relative;

			span {
				position: absolute;
				width: 18px;
				height: 18px;
				border-radius: 50%;
				background-color: $color-white;
				text-align: center;
				font-size: 13px;
				right: 18px;
				color: $color-black;
			}
		}
	}

	.nav {
		border-bottom: 1px solid $color-gray-primary;
		height: 100px;

		.nav__item {
			align-items: center;
			border-right: 1px solid $color-gray-primary;
			display: flex;
			height: 100%;
			justify-content: center;

			&:last-child {
				border-right: 0;
				position: relative;
				left: 13px;
			}
		}
		.__links {
			ul {
				align-items: center;
				display: flex;
				margin: 0;
				li {
					list-style: none;
					margin: 0 15px;
					a {
						color: $color-white;
						text-decoration: none;

						&:hover {
							color: $color-gray-primary;
						}
					}
				}
			}
		}
	}

	@media (min-width: 900px) and (max-width: 1199px) {
		.logo {
			img {
				width: 120px;
			}
		}
		.nav {
			.nav__item {
				.__links {
					ul {
						padding: 0;
						li {
							margin: 0 5px;
						}
					}
				}
			}
		}
	}

	@media (min-width: 800px) and (max-width: 899px) {
		.logo {
			img {
				width: 120px;
			}
		}
		.nav {
			.nav__item {
				.__links {
					ul {
						padding: 0;
						li {
							margin: 0 3px;
						}
					}
				}
			}
		}
	}
}

