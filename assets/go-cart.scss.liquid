.go-cart-drawer__footer {
	display: flex;
	height: 100px;
	padding: 0;
	align-items: center;
	justify-content: space-around;
	background-color: #fff;
	position: absolute;
	bottom: 0;
    right: 0;
    left: 0;

	&::before {
		content: "";
		position: absolute;
		height: 100%;
		width: 1px;
		border: 1px solid #7B7F89;
	}

	&::after {
		background-color: #000;
